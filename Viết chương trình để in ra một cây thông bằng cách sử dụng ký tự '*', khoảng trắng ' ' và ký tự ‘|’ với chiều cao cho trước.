#include <iostream>
#include <string>

int main() {
    int height;
    std::cout << "nhập chiều cao cây thông: ";
    std::cin >> height;

    if (height < 3) {
        std::cout << "No Tree" << std::endl;
    } else {
        // In cây thông
        for (int i = 1; i <= height; i++) {
            // In khoảng trắng bên trong cây thông
            for (int j = 0; j < height - i; j++) {
                std::cout << ' ';
            }

            // In sao '*' cho phần thân cây
            for (int j = 0; j < 2 * i - 1; j++) {
                std::cout << '*';
            }

            std::cout << std::endl;
        }

        // In thân cây
        for (int i = 0; i < height - 1; i++) {
            for (int j = 0; j < height - 1; j++) {
                std::cout << ' ';
            }
            std::cout << '|' << std::endl;
        }
    }

    return 0;
}
