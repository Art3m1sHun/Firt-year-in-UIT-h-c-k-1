#include <iostream>

using namespace std;

struct PhanSo{
	int tuso;
	int mauso;
};

void Nhap(PhanSo &a){
	cin >> a.tuso >> a.mauso;
}

PhanSo Nhap(){
	PhanSo b;
	cin >> b.tuso >> b.mauso;
	return b;
}

int gcd(int a, int b) {
    while (b != 0) {
        int temp = a % b;
        a = b;
        b = temp;
    }
    return a;
}

PhanSo Cong(PhanSo a, PhanSo b){
	PhanSo c;
	c.tuso = a.tuso * b.mauso + b.tuso * a.mauso;
	c.mauso = a.mauso * b.mauso;
	int ucln = gcd(c.tuso, c.mauso);
	c.tuso /= ucln;
	c.mauso /= ucln;
	return c;
}
void Xuat(PhanSo a){
	if(a.tuso % a.mauso != 0){
    cout << a.tuso << "/" << a.mauso;
	}
	else cout<<a.tuso / a.mauso;
}
int main() {
    PhanSo a, b;
    Nhap(a);
    b = Nhap();
    Xuat(Cong(a, b));
    return 0;
}
