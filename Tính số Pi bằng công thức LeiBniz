Tính số Pi bằng công thức LeiBniz

#include <iostream>
#include <cmath>

using namespace std;

double F(double x, int n) {
	int a;
	if (n % 2 == 0)
		a = 1;
	else a = -1;
	float nhap = 1;
	for (int i = 1; i <= 2 * n + 1; i++) {
		nhap = nhap * x / i;
	}
	return a * nhap;
}

int main() {
	double x, s = 0;
	cin >> x;
	int n = 0;
	while (abs(F(x, n)) > 0.00001) {
		s += F(x, n);
		n++;
	}
	cout << setprecision(4) << fixed << s;
	return 0;
